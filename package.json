{
  "name": "root",
  "private": true,
  "scripts": {
    "audit": "npm audit fix && lerna-audit",
    "rebuild": "npm run clean && npm install && npm run build",
    "clean": "lerna clean -y",
    "postinstall": "lerna bootstrap",
    "build": "lerna run build",
    "test": "jest",
    "lerna:publish": "lerna publish from-package --yes ",
    "lerna:publish-next": "lerna publish --canary --preid next --dist-tag next --pre-dist-tag next --no-push --no-git-tag-version --no-git-reset --force-publish --yes"
  },
  "devDependencies": {
    "@types/jest": "24.0.17",
    "@types/node": "12.7.1",
    "fs-extra": "8.1.0",
    "jest": "24.8.0",
    "lerna": "^3.20.2",
    "lerna-audit": "1.1.1",
    "ts-jest": "25.3.1",
    "typescript": "3.8.3"
  }
}
